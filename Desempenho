# ‚ö° Otimizar Windows para Desempenho M√°ximo ‚ö°
# üöÄ Desativa efeitos visuais, otimiza energia e desativa servi√ßos desnecess√°rios

Write-Host "‚è≥ Aplicando otimiza√ß√µes para m√°ximo desempenho..." -ForegroundColor Yellow

# 1Ô∏è‚É£ DESATIVAR ANIMA√á√ïES E EFEITOS VISUAIS
Write-Host "üîß Desativando anima√ß√µes e efeitos visuais..."
$visualEffects = @(
    "MinAnimate", "UserPreferencesMask", "VisualFXSetting", "DragFullWindows", 
    "FontSmoothing", "MenuShowDelay", "ListviewAlphaSelect", "ListviewShadow", 
    "TaskbarAnimations"
)
foreach ($effect in $visualEffects) {
    reg add "HKEY_CURRENT_USER\Control Panel\Desktop" /v $effect /t REG_DWORD /d 0 /f | Out-Null
}
Write-Host "‚úÖ Efeitos visuais desativados."

# 2Ô∏è‚É£ ALTERAR PLANO DE ENERGIA PARA ALTO DESEMPENHO
Write-Host "üîã Configurando plano de energia para 'Alto Desempenho'..."
powercfg /S SCHEME_MIN
Write-Host "‚úÖ Energia otimizada."

# 3Ô∏è‚É£ DESATIVAR SERVI√áOS DESNECESS√ÅRIOS
Write-Host "üöÄ Desativando servi√ßos desnecess√°rios..."
$servicos = @(
    "DiagTrack", "WSearch", "SysMain", "XblGameSave", "XboxNetApiSvc", "dmwappushservice"
)
foreach ($servico in $servicos) {
    Stop-Service -Name $servico -Force -ErrorAction SilentlyContinue
    Set-Service -Name $servico -StartupType Disabled
}
Write-Host "‚úÖ Servi√ßos otimizados."

# 4Ô∏è‚É£ DESATIVAR APPS EM SEGUNDO PLANO
Write-Host "‚ùå Desativando aplicativos em segundo plano..."
reg add "HKEY_CURRENT_USER\Software\Microsoft\Windows\CurrentVersion\BackgroundAccessApplications" /v GlobalUserDisabled /t REG_DWORD /d 1 /f | Out-Null
Write-Host "‚úÖ Aplicativos em segundo plano desativados."

# 5Ô∏è‚É£ DESATIVAR ONEDRIVE
Write-Host "üö´ Desativando OneDrive..."
taskkill /f /im OneDrive.exe | Out-Null
Start-Process -FilePath "$env:SystemRoot\SysWOW64\OneDriveSetup.exe" -ArgumentList "/uninstall" -NoNewWindow -Wait
Write-Host "‚úÖ OneDrive desativado."

# 6Ô∏è‚É£ LIMPAR ARQUIVOS TEMPOR√ÅRIOS
Write-Host "üßπ Limpando arquivos tempor√°rios..."
Remove-Item -Path "C:\Windows\Temp\*" -Recurse -Force -ErrorAction SilentlyContinue
Remove-Item -Path "$env:TEMP\*" -Recurse -Force -ErrorAction SilentlyContinue
Write-Host "‚úÖ Arquivos tempor√°rios removidos."

# 7Ô∏è‚É£ REINICIAR O EXPLORER PARA APLICAR ALTERA√á√ïES
Write-Host "üîÑ Reiniciando o Windows Explorer..."
Stop-Process -Name explorer -Force
Start-Process explorer
Write-Host "‚úÖ Otimiza√ß√µes aplicadas com sucesso! üöÄ"


